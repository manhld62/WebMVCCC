@page "/admin/delete-role/{roleid}"
@model RaZorWebxxx.Areas.Admins.Pages.Role.DeleteModel
@{
    ViewData["Title"] = "Xóa Role ";
}
<h2>@ViewData["Title"]</h2>
<partial name="_Statusmessage" model="@Model.Statusmessage"></partial>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p>Bạn có chắc chắn xóa <strong>@Model.role.Name</strong></p>

            <div class="form-group">
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a class="btn btn-primary" asp-page="./Index">Danh sách các role</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}