@page "/admin/set-role/{id}"
@model RaZorWebxxx.Areas.Admins.Pages.User.AddRoleModel
@{
    ViewData["Title"] = "Thiết Lập Vai Trò Thành Viên";

}
@{ 
 

        }

<h4>Thiết Lập vai trò thành viên :@Model.user.UserName</h4>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RolesNames"></label>

                @Html.ListBoxFor(m => m.RolesNames, @Model.allRoles, new
                {
               id = "id-select-roles",

           }
               )
                <span asp-validation-for="RolesNames" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary">Cập Nhât</button>
            <a class="btn btn-primary" asp-page="./Index">Danh sach thanh vien</a>
        </form>
        <hr />
        <p>
            Các claim user có từ role:



        </p>
        @if (Model.claimsInRole.Count > 0)
        {
            <ul>
                @foreach (var claim in Model.claimsInRole)
                {
                    <li>@claim.ClaimType:@claim.ClaimValue </li>

                }
            </ul>
        }

        <p>
            Các claim riêng
          <a asp-page="./EditUserRoleClaim" asp-page-handler="AddClaim" asp-route-userid="@Model.user.Id">Thêm Claim riêng</a>



        </p>
        @if (Model.claimsInUserClaim.Count > 0)
        {
            <ul>
                @foreach (var claim in Model.claimsInUserClaim)
                {
                <li>
                    <a asp-page="./EditUserRoleClaim" asp-page-handler="EditClaim" asp-route-claimid="@claim.Id">  @claim.ClaimType:@claim.ClaimValue</a>
                     
                </li>

                }
            </ul>
        }
    </div>
</div>

@section Scripts {
     <script src="~/lib/multipe/multiple-select.min.js"></script>
     <link href="~/lib/multipe/multiple-select.min.css" rel="stylesheet" />
     <script>
         $("#id-select-roles").multipleSelect({
             selectAll: false,
             keepOpen: false,
             isOpen: false,
         });
     </script>
    <partial name="_ValidationScriptsPartial" />
}